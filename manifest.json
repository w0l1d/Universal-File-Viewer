{
  "manifest_version": 2,
  "name": "Native Multi-Format Viewer",
  "version": "2.0.0",
  "description": "ðŸ¦Š Native Firefox-style viewer for JSON, YAML, XML, CSV and more - feels built into Firefox",
  "author": "Walid Ahdouf",
  "homepage_url": "https://github.com/w0l1d/universal-file-viewer",

  "browser_specific_settings": {
    "gecko": {
      "id": "{9fcf0451-bb25-4b50-b7ae-e788f10cc82b}"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "lib/js-yaml.min.js",
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "browser_action": {
    "default_title": "Native Multi-Format Viewer Settings",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },


  "web_accessible_resources": [
    "viewer.html",
    "css/viewer.css",
    "lib/*",
    "icons/*",
    "js/*"
  ]
}